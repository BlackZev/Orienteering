<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coly_osm_fragment"
    tools:context="edu.esiea.orienteering.view.OSMFragment">

    <org.osmdroid.views.MapView
        android:id="@+id/app_mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" />

    <LinearLayout
        android:id="@+id/lily_btnsRace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="70dp"
        tools:ignore="ButtonStyle">
        <Button
            android:id="@+id/btn_newRace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_newrace"
            android:layout_marginEnd="10dp"/>

        <Button
            android:id="@+id/btn_listRaces"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_listrace" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
